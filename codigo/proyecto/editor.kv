#:kivy 1.1.0

Root:
	orientation: 'vertical'
	GridLayout:
		cols: 2
		Button:
			text: 'Elegir archivo'
			on_release: root.ElegirArchivo()
		Button:
			text: 'Escribe mensaje'
			on_release: root.EscribirMensaje()	
		Button:
			text: 'Ocultar'
			on_release: root.Ocultar()
		Button:
			text: 'Recuperar'
			on_release: root.Recuperar()
		GridLayout:
			rows: 3
			Label:
				text: root.labelPruebas
				text_size: self.width, None
			Label:
				text: root.labelPruebas
				text_size: self.width, None
			Label:
				text: root.label3
				text_size: self.width, None
		Image:
			id: image
			source: root.filename

<ElegirArchivoVentana>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		FileChooserIconView:
			id: filechooser_load
			filters: ['*png', '*bmp']

		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cancelar"
				on_release: root.cancel()

			Button:
				text: "Cargar"
				on_release: root.CargarArchivo(filechooser_load.path, filechooser_load.selection)

<EscribirMensajeVentana>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'
			ScrollView:
				size: self.size
				TextInput:
					id: text_input_save
					size_hint_y: None
					height: 200
					multiline: True

		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "CancelInside"
				on_release: root.cancel()

			Button:
				text: "SaveInside"
				on_release: root.GuardarMensaje(text_input_save.text)
				
<MostrarMensaje>
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		ScrollView:
			size: self.size
			Label:
				text: root.mensajerecuperado
				text_size: self.width, None
		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cerrar"
				on_release: root.cancel()
