#:kivy 1.1.0

Root:
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
			size_hint_y: None
			height: 100
			Button:
				text: 'Elegir archivo'
				on_release: root.ElegirArchivo()
			Button:
				text: 'Escribe clave'
				on_release: root.EscribirClave()
				
			Button:
				text: 'Ocultar'
				on_release: root.ProcesaTodo("")
			Button:
				text: 'Recuperar'
				on_release: root.Recuperar()
			Label:
				text: root.labelPruebas
			Image:
				id: image
				source: root.filename
				size: 600, 600 / self.image_ratio
				


<ElegirArchivoVentana>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		FileChooserIconView:
			id: filechooser_load
			filters: ['*jpeg', '*jpg','*png', '*bmp']

		BoxLayout:
			size_hint_y: None
			height: 100
			Button:
				text: "CancelInside"
				on_release: root.cancel()

			Button:
				text: "LoadInside"
				on_release: root.load(filechooser_load.path, filechooser_load.selection)

<EscribirClaveVentana>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
			
		TextInput:
			id: text_input_save
			size_hint_y: None
			multiline: True


		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "CancelInside"
				on_release: root.cancel()

			Button:
				text: "SaveInside"
				on_release: root.clave(text_input_save.text)
